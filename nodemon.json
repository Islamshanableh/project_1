{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules"],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },

  "watch": [
    "./bin",
    "./config",
    "./routes",
    "./controllers",
    "./services",
    "./validations",
    "./constants",
    "./middlewares",
    "./utils",
    "./payments",
    "./jobs",
    "./queries"
  ],
  "ext": "js,json"
}
